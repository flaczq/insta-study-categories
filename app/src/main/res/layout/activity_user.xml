<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLight"
    tools:context=".activity.UserActivity">

    <ListView android:id="@+id/user_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1px"
        android:divider="@color/colorDivider"/>

    <com.crystal.crystalpreloaders.widgets.CrystalPreloader android:id="@+id/user_preloader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:visibility="invisible"
        app:crs_pl_size="medium"
        app:crs_pl_fg_color="@color/colorPrimaryDark"
        app:crs_pl_style="tornado_circle_1" />

    <android.support.design.widget.FloatingActionButton android:id="@+id/user_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/stat_notify_chat"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/default_margin"
        app:backgroundTint="@color/colorAccent"
        app:fabSize="normal"
        app:layout_behavior="abc.flaq.apps.instastudycategories.design.MoveUpBehavior"/>

</android.support.design.widget.CoordinatorLayout>
