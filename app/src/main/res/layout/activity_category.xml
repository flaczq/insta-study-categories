<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="abc.flaq.apps.instastudycategories.CategoryActivity">

    <com.etsy.android.grid.StaggeredGridView android:id="@+id/category_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:item_margin="2dp"
        app:column_count="2" />

    <com.crystal.crystalpreloaders.widgets.CrystalPreloader android:id="@+id/category_preloader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:crs_pl_size="extra_large"
        app:crs_pl_fg_color="@color/colorPrimary"
        app:crs_pl_style="expandable_balls" />

</RelativeLayout>
