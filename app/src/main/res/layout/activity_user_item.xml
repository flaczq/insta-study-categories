<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/default_small_margin"
    android:paddingBottom="@dimen/default_small_margin"
    android:paddingLeft="@dimen/default_margin"
    android:paddingRight="@dimen/default_margin">

    <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/user_item_profile_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/placeholder_profile_pic_72"
        android:layout_centerVertical="true"
        app:civ_border_width="1px"
        app:civ_border_color="@color/colorDivider" />

    <TextView android:id="@+id/user_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testowy 123"
        android:textSize="16sp"
        android:textColor="@color/textColorSecondary"
        android:maxWidth="@dimen/username_max_width"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/user_item_profile_pic"
        android:layout_toEndOf="@+id/user_item_profile_pic"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="8dp"
        android:layout_alignTop="@id/user_item_profile_pic" />
    <TextView android:id="@+id/user_item_joined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="01.02.2017"
        android:textSize="13sp"
        android:textColor="@color/textColorLessImportant"
        android:layout_toRightOf="@+id/user_item_profile_pic"
        android:layout_toEndOf="@+id/user_item_profile_pic"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginBottom="8dp"
        android:layout_alignBottom="@id/user_item_profile_pic" />

    <TextView android:id="@+id/user_item_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="123"
        android:textSize="14sp"
        android:textColor="@color/textColorMaybeImportant"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/user_item_username" />
    <TextView android:id="@+id/user_item_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="63"
        android:textSize="14sp"
        android:textColor="@color/textColorMaybeImportant"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/user_item_joined" />

</RelativeLayout>