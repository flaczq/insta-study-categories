<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/user_item_layout">

    <ImageView android:id="@+id/user_item_profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_image"
        android:gravity="center_vertical"
        android:layout_centerVertical="true" />

    <TextView android:id="@+id/user_item_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User 1"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:layout_toRightOf="@+id/user_item_profile_pic"
        android:layout_toEndOf="@+id/user_item_profile_pic"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true" />

</RelativeLayout>